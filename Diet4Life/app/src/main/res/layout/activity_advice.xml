<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdviceActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/upper_part_height"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/marL_marR_iv_tv"
                android:layout_marginTop="@dimen/marT_marB_iv_tv"
                android:layout_marginEnd="@dimen/marT_marB_iv_tv"
                android:layout_marginBottom="@dimen/marL_marR_iv_tv"
                android:src="@drawable/test"
                app:srcCompat="@drawable/test" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/info_ll_ll_tv_marT"
                android:text="@string/app_name"
                android:textSize="@dimen/info_ll_ll_tv_textSize"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="end"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_to_calculate"
                android:layout_width="36dp"
                android:layout_height="31dp"
                android:layout_marginTop="@dimen/marT_marB_iv_tv"
                android:layout_marginEnd="@dimen/marT_marB_iv_tv"
                android:layout_marginBottom="@dimen/marL_marR_iv_tv"
                android:background="@drawable/style_btn_triangle"
                android:onClick="onToCalculateButtonClick"
                android:rotation="180" />
            <Button
                android:id="@+id/btn_to_info"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginTop="@dimen/marT_marB_iv_tv"
                android:layout_marginEnd="@dimen/marT_marB_iv_tv"
                android:layout_marginBottom="@dimen/marL_marR_iv_tv"
                android:background="@drawable/style_btn_rectangle"
                android:onClick="onToInfoButtonClick" />
            <Button
                android:id="@+id/btn_to_main"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginTop="@dimen/marT_marB_iv_tv"
                android:layout_marginEnd="@dimen/marT_marB_iv_tv"
                android:layout_marginBottom="@dimen/marL_marR_iv_tv"
                android:background="@drawable/style_btn_circle"
                android:onClick="onToMainButtonClick" />
        </LinearLayout>

    </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_black"/>

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_way"
                    android:textSize="@dimen/tv_title_textSize"
                    android:layout_marginStart="@dimen/marStart"
                    android:layout_marginBottom="@dimen/marT_marB_iv_tv"
                    android:layout_marginTop="@dimen/marT_marB_iv_tv"
                    android:text="(название выбранной стратегии)"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                android:textStyle="bold"
                android:textSize="@dimen/tv_advice_textSize"
                android:layout_marginStart="@dimen/marStart"
                android:text="@string/advice_norma_kkal_day"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_norna_kkal"
                android:textSize="@dimen/tv_advice_textSize"
                android:layout_gravity="center"
                android:text="N ккал"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:layout_marginStart="@dimen/marStart"
                android:textSize="@dimen/tv_advice_textSize"
                android:layout_marginBottom="@dimen/marT_marB_iv_tv"
                android:textStyle="bold"
                android:text="@string/advice_norma"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                    android:layout_marginStart="@dimen/marStart"
                    android:layout_marginEnd="@dimen/marEnd"
                    android:layout_marginBottom="@dimen/marT_marB_tv_advice"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textSize="@dimen/advice_tv_textSize"
                        android:text="@string/advice_proteins"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:textSize="@dimen/advice_tv_textSize"
                         android:id="@+id/advice_proteins"
                        android:text="Х грамм"/>

            </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginEnd="@dimen/marEnd"
                    android:layout_marginStart="@dimen/marStart"
                    android:layout_marginBottom="@dimen/marT_marB_tv_advice"

                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/advice_tv_textSize"
                      android:layout_weight="1"
                        android:text="@string/advice_fats"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:textSize="@dimen/advice_tv_textSize"
                        android:id="@+id/advice_fats"
                        android:text="Y грамм"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginEnd="@dimen/marEnd"
                    android:layout_marginBottom="@dimen/marT_marB_tv_advice"
                    android:layout_marginStart="@dimen/marStart"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textSize="@dimen/advice_tv_textSize"
                        android:text="@string/advice_carbohydrates"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:textSize="@dimen/advice_tv_textSize"
                        android:id="@+id/advice_carbohydrates"
                        android:text="Z грамм"/>

                </LinearLayout>

            </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:id="@+id/advice"
                    android:textStyle="bold"
                    android:textSize="@dimen/tv_advice_textSize"
                    android:layout_marginStart="@dimen/marStart"
                    android:text="@string/advice_water"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/tv_advice_textSize"
                    android:layout_gravity="center"
                    android:id="@+id/advice_water"
                    android:text="W грамм"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="@dimen/tv_advice_textSize"
                    android:layout_marginStart="@dimen/marStart"
                    android:layout_marginBottom="@dimen/marT_marB_tv_advice"
                    android:id="@+id/advice_other"
                    android:text="@string/advice_other"/>


                <TableLayout
                    android:id="@+id/advice_table"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/marStart"
                    android:layout_marginEnd="@dimen/marEnd"
                    android:stretchColumns="*"
                    >

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#000"
                       >

                        <TextView
                            android:text="@string/advice_table_one"
                            android:background="@color/color_advice_grey"
                            android:gravity="center_horizontal"
                            android:layout_weight="1"
                            android:layout_margin="1dip"
                            android:textColor="#000000"
                            />
                        <TextView
                            android:text="@string/advice_table_two"
                            android:gravity="center_horizontal"
                            android:background="@color/color_advice_grey"
                            android:layout_margin="1dip"
                            android:textColor="#000000"
                            android:layout_weight="1"
                            />

                    </TableRow>


                </TableLayout>

                <Button
                    android:id="@+id/button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onFoodButtonClick"
                    android:layout_gravity="center"
                    android:text="@string/advice_btn_to_food" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>