<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <TextView
                android:id="@+id/list_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="250px"
                android:minWidth="250px"
                android:textSize="@dimen/tv_title_textSize"
                android:layout_marginTop="@dimen/marT_marB_iv_tv"
                android:layout_marginStart="@dimen/marStart"
                android:layout_marginEnd="@dimen/marEnd"
                android:text="Название"
                />

            <TextView
                android:id="@+id/list_tv_kkal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marT_marB_iv_tv"
                android:layout_marginStart="@dimen/marL_marR_iv_tv"
                android:layout_marginEnd="@dimen/marEnd"
                android:text="Ккал"
                />

            <TextView
                android:id="@+id/list_tv_protein"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marT_marB_iv_tv"
                android:layout_marginStart="@dimen/marStart"
                android:layout_marginEnd="@dimen/marEnd"
                android:text="б"
                />

            <TextView
                android:id="@+id/list_tv_fats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marT_marB_iv_tv"
                android:layout_marginStart="@dimen/marStart"
                android:layout_marginEnd="@dimen/marEnd"
                android:text="ж"
                />

            <TextView
                android:id="@+id/list_tv_carb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marT_marB_iv_tv"
                android:layout_marginStart="@dimen/marStart"
                android:layout_marginEnd="@dimen/marEnd"
                android:text="у"
                />

            <TextView
                android:id="@+id/list_tv_gramm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marT_marB_iv_tv"
                android:layout_marginStart="@dimen/marStart"
                android:layout_marginEnd="@dimen/marEnd"
                android:text="гр"
                />
        </LinearLayout>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cb_list"
        android:text="Выполнено"
        android:layout_gravity="end"
        android:layout_marginEnd="@dimen/marEnd"
        android:layout_marginBottom="@dimen/tv_marBottom"
        />


</LinearLayout>